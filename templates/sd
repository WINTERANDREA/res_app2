{% block javascript %}
    
    <script>
        function funca(name) {
            var x = document.getElementsByName(name)[0];
            if (x.checked == 0) {
                console.log(x.checked);
                x.checked = 1;
                document.getElementsByName("gino")[0].submit()
            } else {
                console.log(x.checked);
                x.checked = 0
            }
        }
    </script>
    
    {% endblock javascript %}